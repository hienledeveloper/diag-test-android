<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="statusConfirmed"
            type="test.diag.com.diagtest_android.model.local.StatusConfirmed" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_medium"
            android:paddingEnd="@dimen/space_medium"
            android:paddingBottom="@dimen/space_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`New Confirmed: ` + statusConfirmed.newConfirmed}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{`Total Confirmed: ` + statusConfirmed.totalConfirmed}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{`New Deaths: ` + statusConfirmed.newDeaths}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{`Total Deaths: ` + statusConfirmed.totalDeaths}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{`New Recovered: ` + statusConfirmed.newRecovered}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{`Total Recovered: ` + statusConfirmed.totalRecovered}"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="New Confirmed" />

        </LinearLayout>

    </LinearLayout>

</layout>